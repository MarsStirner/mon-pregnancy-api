{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"title": "defect",
	"description": "Дефектура",
	"type": "object",
	"properties": {
		"external_id": {
			"description": "Внешний ID",
			"type": "string"
		},
		"adress": {
			"type": "object",
			"description": "Домашний адрес",
			"properties": {
				"KLADR_locality": {
					"type": "string",
					"description": "Код населённого пункта адреса проживания по справочнику КЛАДР"
				},
				"KLADR_street": {
					"type": "string",
					"description": "Код улицы адреса проживания по справочнику КЛАДР"
				},
				"house": {
					"type": "string",
					"description": "Данные дома адреса проживания",
					"maxLength":8
				},
				"building": {
					"type": "string",
					"description": "Корпус дома адреса проживания",
					"maxLength":8
				},
				"flat": {
					"type": "string",
					"description": "Данные квартиры адреса проживания",
					"maxLength":6
				},
				"locality_type": {
					"type": "integer",
					"description": "Тип населенного пункта: 0-село, 1 - город",
					"enum": [0,1]
				}
			}
		},
		"hospital_of_naprav": {
			"description": "Направившее ЛПУ (код)",
			"type": "string"
		},
		"doctor_of_naprav": {
			"description": "Кем направлена (код)",
			"type": "string"
		},
		"date_of_naprav": {
			"description": "Дата направления",
			"type": "string",
			"format": "date"
		},
		"doctor_dostav": {
			"description": "Кем доставлен (код)",
			"type": "string"
		},
		"diagnosis_naprav": {
			"description": "Диагноз при направлении",
			"type": "string",
			"pattern": "^([A-Z][0-9][0-9])(\\.([0-9]{1,2})(\\.[0-9]+)?)?$"
		},
		"diagnosis_opc": {
			"description": "Диагноз,установленный ОПЦ",
			"type": "string",
			"pattern": "^([A-Z][0-9][0-9])(\\.([0-9]{1,2})(\\.[0-9]+)?)?$"
		},
		"defect_org": {
			"description": "Выявленные организационные дефекты оказания медицинской помощи",
			"type": "string"
		},
		"defect_heal": {
			"description": "Выявленные лечебные дефекты оказания медицинской помощи",
			"type": "string"
		},
		"defect_diagnost": {
			"description": "Выявленные диагностические дефекты оказания медицинской помощи",
			"type": "string"
		},
		"recommend_org": {
			"description": "Рекомендованные мероприятия по организации для повышения качества и уровня медицинской помощи",
			"type": "string"
		},
		"recommend_diagnost": {
			"description": "Рекомендованные мероприятия по диагностике для повышения качества и уровня медицинской помощи",
			"type": "string"
		},
		"recommend_heal": {
			"description": "Рекомендованные мероприятия по лечению для повышения качества и уровня медицинской помощи",
			"type": "string"
		},
		"hospital": {
			"description": "ЛПУ (код)",
			"type": "string"
		},
		"doctor_zaved": {
			"description": "Заведующий отделением (код)",
			"type": "string"
		},
		"doctor": {
			"description": "Врач (код)",
			"type": "string"
		},
		"doctor_zamglav": {
			"description": "Заместитель главного врача по профилю (код)",
			"type": "string"
		}
	}
}